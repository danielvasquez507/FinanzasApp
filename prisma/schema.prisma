// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
  binaryTargets = ["native", "debian-openssl-1.1.x", "debian-openssl-3.0.x"]
}

datasource db {
  provider = "sqlite"
  url      = env("DATABASE_URL")
}

model Transaction {
  id          String   @id @default(uuid())
  date        DateTime
  amount      Float    // Changed to Float for SQLite compatibility/simplicity as per T3 stack
  category    String
  sub         String
  notes       String?
  isPaid      Boolean  @default(false)
  week        String   // YYYY-WW format
  createdAt   DateTime @default(now())
  deletedAt   DateTime?
}

model Recurring {
  id      String  @id @default(uuid())
  type    String  // 'income' | 'expense'
  name    String
  amount  Float
  owner   String  // 'Daniel' | 'Gedalya' | 'Ambos'
  deletedAt DateTime?
}

model Category {
  id      String   @id @default(uuid())
  name    String   @unique
  iconKey String
  color   String
  subs    String   // JSON string of subcategories
  deletedAt DateTime?
}

model AuditLog {
  id        Int      @id @default(autoincrement())
  action    String   // 'CREATE', 'UPDATE', 'DELETE', 'RESTORE'
  entity    String   // Name of the table
  entityId  String   // ID of the affected record (converted to string)
  details   String?  // Optional JSON details
  createdAt DateTime @default(now())
}
